<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <system.serviceModel>

    <bindings>
      <basicHttpBinding>
        <!-- configure the maxReceivedMessageSize value to suit the max size of 
 the request (in bytes) you want the service to receive-->
        <binding name="higherMessageSize" transferMode="Streamed">
        </binding>
        
      </basicHttpBinding>
    </bindings>
    
    <services>

      <service name="NSEmbroidery.Core.EmbroideryCreator"
               behaviorConfiguration="EmbroideryCreatorBehaviorMex">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8030/EmbroideryCreator"/>
          </baseAddresses>
        </host>

        <endpoint address=""
                  binding="basicHttpBinding"
                  bindingConfiguration="higherMessageSize"
                  contract="NSEmbroidery.Core.Interfaces.IEmbroideryCreatorService"  />
        <endpoint address="mex"
                  binding="mexHttpBinding"
                  contract="IMetadataExchange"  />
      </service>

    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="EmbroideryCreatorBehaviorMex">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="False"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>